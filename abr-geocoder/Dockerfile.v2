FROM node:22.22.0-bookworm

# 作業ディレクトリを設定
WORKDIR /app

# abr-geocoder 2.2.1 をグローバルインストール
RUN npm install -g @digital-go-jp/abr-geocoder@2.2.1

# データ格納用ディレクトリを作成
RUN mkdir -p /data/abr-geocoder

# 環境変数でデータディレクトリを指定
ENV ABR_GEOCODER_DIR=/data/abr-geocoder

# API アプリケーションをコピー
COPY api/package*.json ./
COPY api/tsconfig.json ./

# 依存関係をインストール
RUN npm install

# ソースコードをコピー
COPY api/src ./src

# TypeScript をビルド
RUN npm run build

# ポートを公開
EXPOSE 3000

# API サーバーを起動
CMD ["npm", "start"]
